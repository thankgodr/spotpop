<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.shixxels.thankgodrichard.spotpopfinal.MainActivity"
    tools:showIn="@layout/app_bar_main">




       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/container3">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent" />


       </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="5"
        android:id="@+id/btmholder"
        android:background="@color/fabg"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/feedsbtm"
            android:orientation="vertical"
            android:gravity="center_horizontal">

             <ImageView
                 android:layout_width="24dp"
                 android:layout_height="24dp"
                 android:tint="@color/btmbartint"
                 android:id="@+id/feed_icon"
                 android:src="@drawable/ic_feed_icon"
                 android:layout_gravity="center"
                 android:layout_marginTop="15dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:id="@+id/feed_line"
                android:visibility="gone"
                android:layout_gravity="bottom"
                android:background="@color/bgprofil"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/searchbtm"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="@color/btmbartint"
                android:id="@+id/serch_icon"
                android:src="@drawable/ic_search_icon"
                android:layout_gravity="center"
                android:layout_marginTop="15dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:layout_gravity="bottom"
                android:id="@+id/serch_line"
                android:visibility="gone"
                android:background="@color/bgprofil"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/addbtm"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="15dp"
                android:id="@+id/add_icon"
                android:tint="@color/btmbartint"
                android:src="@drawable/add_icon"
                android:layout_gravity="center" />
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:id="@+id/add_line"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:background="@color/bgprofil"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/notificationbtm"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="@color/btmbartint"
                android:src="@drawable/ic_alarm"
                android:id="@+id/notify_icon"
                android:layout_gravity="center"
                android:layout_marginTop="15dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:visibility="gone"
                android:layout_gravity="bottom"
                android:id="@+id/notify_line"
                android:background="@color/bgprofil"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/profilebtm"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="@color/btmbartint"
                android:src="@drawable/ic_friends"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:id="@+id/profile_icon" />
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:visibility="gone"
                android:id="@+id/profile_line"
                android:layout_gravity="bottom"
                android:background="@color/bgprofil"/>

        </LinearLayout>




    </LinearLayout>







</RelativeLayout>
