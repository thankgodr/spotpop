<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".segment.profileSub.ProfileMenu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:weightSum="6"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/sendmessage"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/borderbtm"
                android:layout_marginBottom="10dp"
                android:clickable="true">

                <TextView
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sendmessage"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/profile_menu"
                    android:layout_gravity="center_horizontal"
                    />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:paddingTop="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_right_angle"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:id="@+id/notifyon"
                android:layout_marginBottom="4dp"
                android:background="@drawable/borderbtm"
                android:clickable="true">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/light_black"
                    android:text="@string/notifyon"
                    android:textSize="@dimen/profile_menu"
                    android:layout_gravity="start|center_horizontal" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:paddingTop="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_right_angle"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:id="@+id/reportuser"
                android:layout_marginBottom="10dp"
                android:background="@drawable/borderbtm"
                android:clickable="true">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reportuser"
                    android:paddingTop="10dp"
                    android:textColor="@color/light_black"
                    android:paddingBottom="10dp"
                    android:textSize="@dimen/profile_menu"
                    android:layout_gravity="start|center_horizontal"
                    />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:paddingTop="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_right_angle"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:id="@+id/blockuser"
                android:layout_marginBottom="10dp"
                android:background="@drawable/borderbtm"
                android:clickable="true">


                <TextView
                    android:layout_width="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_height="wrap_content"
                    android:text="@string/blockuser"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/profile_menu"
                    android:layout_gravity="start|center_horizontal"
                    />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />



            </LinearLayout>



        </LinearLayout>

    </ScrollView>
</FrameLayout>
